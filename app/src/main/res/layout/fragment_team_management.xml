<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.ddns.peder.jaktlaget.fragments.TeamFragment"
    android:padding="16dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/teamname_guide"
        android:textSize="18dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username_hint"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
            android:id="@+id/teamname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/teamname_hint"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_teamcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
            android:id="@+id/teamcode_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/teamcode_hint"/>
    </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <Button
            android:id="@+id/reset_team_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_secondary_selector"
            android:text="@string/reset_team_button"/>
        <Button
            android:id="@+id/save_teamname_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:background="@drawable/button_selector"
            android:text="@string/update_team_button"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/code_explain"
            android:textSize="18dp"/>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
