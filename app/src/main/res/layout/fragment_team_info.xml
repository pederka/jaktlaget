<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.ddns.peder.jaktlaget.fragments.TeamFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/teamname_guide"
                android:textAppearance="@style/AppTheme.TextStyle" />


            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hunter_name"
                android:textColor="@color/white"
                android:textAppearance="@style/AppTheme.TextStyle"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/info_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peder"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.TextStyle.Important"
                android:padding="5dp"
                android:background="@color/colorPrimaryLight"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/team_name"
                android:textAppearance="@style/AppTheme.TextStyle"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/info_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hanshusbekken2"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.TextStyle.Important"
                android:padding="5dp"
                android:background="@color/colorPrimaryLight"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/code"
                android:textColor="@color/white"
                android:textAppearance="@style/AppTheme.TextStyle"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/info_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XY68H3"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.TextStyle.Important"
                android:background="@color/colorPrimaryLight"
                android:padding="5dp"/>

             <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            </LinearLayout>

    </ScrollView>

    <Button
         android:id="@+id/reset_team_button"
         android:layout_width="match_parent"
         android:text="@string/leave_team"
         android:layout_gravity="center"
         android:layout_height="60dp"
         android:theme="@style/AppTheme.Button"
         android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
    />

</RelativeLayout>
