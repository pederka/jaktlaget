<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="net.ddns.peder.jaktlaget.fragments.TeamFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/teamname_guide"
                android:textAppearance="@style/AppTheme.TextStyle" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hunter_name"
                android:textAppearance="@style/AppTheme.TextStyle"
                />
            <TextView
                android:id="@+id/info_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peder"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.TextStyle.Important"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/team_name"
                android:textAppearance="@style/AppTheme.TextStyle"
                />
            <TextView
                android:id="@+id/info_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hanshusbekken2"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.TextStyle.Important"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/code"
                android:textAppearance="@style/AppTheme.TextStyle"
                />
            <TextView
                android:id="@+id/info_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XY68H3"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.TextStyle.Important"/>

             <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

             <Button
                 android:id="@+id/reset_team_button"
                 android:layout_width="150dp"
                 android:text="@string/leave_team"
                 android:layout_gravity="center"
                 android:layout_height="60dp"
                 android:theme="@style/AppTheme.Button.Secondary"
                 />
             <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            </LinearLayout>

    </ScrollView>
</FrameLayout>
